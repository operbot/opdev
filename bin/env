#!/usr/bin/env python3
# This file is placed in the Public Domain.


import os
import sys


sys.path.insert(0, os.getcwd())


def getlist():
    return [x.strip() for x in open("CFG", "r").readlines()[-1].split(",")]


TODO = getlist()


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.rstrip())


popen("rm -fR env")
print("creating environment")
popen('python3 -mvirtualenv env')
popen('env/bin/pip3 install %s -f tar --force-reinstall --upgrade' % " ".join(TODO))
